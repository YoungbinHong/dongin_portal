{
  "name": "dongin-portal",
  "version": "0.1.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "cd ../updater && npm install && npm run build",
    "build": "electron-builder --win nsis --x64",
    "build:32": "electron-builder --win nsis --ia32",
    "build:all": "electron-builder --win nsis"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.624"
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.dongin.portal",
    "productName": "DONGIN PORTAL",
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "icon.ico"
    },
    "nsis": {
      "artifactName": "${productName}_v${version}_Setup.exe",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "../updater/dist/updater.exe",
        "to": "updater.exe"
      }
    ],
    "publish": {
      "provider": "generic",
      "url": "http://192.168.0.254:8000/updates"
    }
  }
}